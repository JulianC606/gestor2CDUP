<div class='d-flex justify-content-between'>
  <h1 class='h3 mb-0 text-gray-800'>
    Transacciones
  </h1>
  <%= link_to new_accounting_transaction_path, class:'text-info' do %>
    <i class="fas fa-plus fa-2x"></i>
  <% end %>
</div>
<hr>

<div class="row mb-5">
  <div class="col-12 mx-auto">
    <div class="card shadow">
      <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <th>Fecha</th>
              <th>Evento</th>
              <th>Cuenta</th>
              <th>Tipo</th>
              <th>Monto</th>
              <th colspan="2">Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% @accounting_transactions.each do |t| %>
              <tr>
                <td><%= t.date %></td>
                <td><%= t.event.try(:name).blank? ? 'Global' : t.event.name %></td>
                <td><%= t.account.name %></td>
                <td><%= t.type_of_transaction %></td>
                <td><%= number_to_currency t.amount %></td>
                <td colspan="2">
                  <%= link_to accounting_transaction_path(t), class: 'text-info' do%>
                    <i class="fas fa-search"></i>
                  <% end %>
                  <%= link_to t, method: :delete, data: { confirm: 'Are you sure?' }, class:'text-danger' do%>
                    <i class="far fa-trash-alt"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>