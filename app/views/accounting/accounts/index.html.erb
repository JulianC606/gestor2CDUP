<div class='d-flex justify-content-between'>
  <h1 class='h3 mb-0 text-gray-800'>
    Cuentas 
  </h1>
  <%= link_to new_accounting_account_path, class:'text-info' do %>
    <i class="fas fa-plus fa-2x"></i>
  <% end %>
</div>

<hr>
<div class="row mb-5">
  <% for @account in @accounting_accounts %>
    <%= render 'accounting/accounts/index/card', account: @account, view: 'index' %>
  <% end %>
  <div class="col-lg-4 col-md-6 col-12 mt-2 ">
    <div class="card border-left-info shadow py-2 h-100">
      <div class="card-body d-flex flex-column justify-content-center align-items-center">
        <%= link_to new_accounting_account_path, class:'d-flex flex-column justify-content-center align-items-center text-info' do %>
          <i class="fas fa-plus fa-3x"></i>
          Crear una cuenta nueva...
        <% end %>
      </div>
    </div>
  </div>
</div>