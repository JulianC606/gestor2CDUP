<div class="card o-hidden border-0 shadow-lg my-5">
  <div class="card-body p-0">
    <!-- Nested Row within Card Body -->
    <div class="row">
      <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
      <div class="col-lg-7">
        <div class="p-5">
          <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">¡Crea una Cuenta!</h1>
          </div>
          <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: 'user'} do |f| %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-user", placeholder: "Ingresa tu email..." %>
            </div>
            <div class="form-group row">
              <div class="col-sm-6 mb-3 mb-sm-0">    
                <%= f.password_field :password, placeholder: "Contraseña", class: "form-control form-control-user", autocomplete: "new-password" %>
              </div>
              <div class="col-sm-6">
                <%= f.password_field :password_confirmation, placeholder: "Confirma tu Contraseña", class: "form-control form-control-user",autocomplete: "new-password" %>              
              </div>
            </div>
            <%= f.submit "¡Registrarme!", class: "btn btn-secondary btn-user btn-block" %>
          <% end %>
          <hr>
          <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

